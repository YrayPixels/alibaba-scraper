# Server Configuration
PORT=8000
NODE_ENV=production

# Puppeteer/Browser Configuration
# Set to true for production (headless mode)
PUPPETEER_HEADLESS=true

# Chrome/Chromium executable path
# Production (Railway/DigitalOcean): /usr/bin/google-chrome-stable
# macOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Linux: /usr/bin/google-chrome-stable or /usr/bin/chromium-browser
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Scraping Method
# Set to false to use fetch-based scraping instead of browser (Puppeteer)
USE_BROWSER_SCRAPING=true


REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=21600
